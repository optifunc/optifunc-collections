{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",                          /* Specify ECMAScript target version for wide compatibility with modern environments */
    "module": "commonjs",                     /* Specify module code generation, commonjs is a good default */
    "declaration": true,                      /* Generates corresponding '.d.ts' file for your JavaScript files */
    "outDir": "./dist",                       /* Redirect output structure to the directory */
    "rootDir": "./src",                       /* Specify the root directory of input files */
    "strict": true,                           /* Enable all strict type-checking options for better code quality */
    "esModuleInterop": true,                  /* Enables emit interoperability between CommonJS and ES Modules */
    "forceConsistentCasingInFileNames": true, /* Disallow inconsistently-cased references to the same file */
    "lib": ["ES2016"],

    /* Additional Options */
    "resolveJsonModule": true,                /* Include if you want to import JSON modules */
    "skipLibCheck": true,                     /* Skip type checking of declaration files, speeds up compilation */

    /* Strict Type-Checking Options */
    "noImplicitAny": true,                    /* Raise error on expressions and declarations with an implied 'any' type */
    "noImplicitThis": true,                   /* Raise error on 'this' expressions with an implied 'any' type */
    "alwaysStrict": true                      /* Parse in strict mode and emit "use strict" for each source file */
  },
  "include": ["src"],                          /* Compiler input files */
  "exclude": ["node_modules", "**/*.spec.ts"]  /* Excludes unit test files and dependencies from being compiled */
}